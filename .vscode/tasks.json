{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "cd backend && env\\Scripts\\activate && python manage.py migrate && python manage.py runserver",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "cd frontend && npm install && npm start",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Both",
      "dependsOn": [
        "Start Backend",
        "Start Frontend"
      ],
      "dependsOrder": "parallel"
    },
    
  ]
}